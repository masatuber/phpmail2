# msmtprc 設定例（Gmail用）

# デフォルトの設定
auth           on
tls            on
tls_starttls on
tls_certcheck off
tls_trust_file /etc/ssl/certs/ca-certificates.crt
logfile        /var/log/msmtp.log

# GmailのSMTP設定
account gmail
host           smtp.gmail.com
port           587
from           bijineworld@gmail.com
password       owpkbuotvddkqdgc
user       bijineworld@gmail.com    
# デフォルトのアカウントとして設定
default account : gmail
